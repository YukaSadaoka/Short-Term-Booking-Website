<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column" style="margin: 40px 20px;">
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="/admin/managerooms">
              <span data-feather="shopping-cart">Manage Rooms</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="bar-chart-2">Help</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="bar-chart-2">Account</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="/user/logout">
              <span data-feather="users">Log Out</span>
            </a>
          </li>
        </ul>
        
        </div>
    </nav>

      
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2 class="h2">Hello {{firstname}} {{lastname}}</h2>  
      </div>
      <div class="upcoming_container">
          <div >
              <div class="upcoming_title"><h2>Upcoming Booking</h2></div>
              <div class="row row-cols-1 row-cols-md-3">
                {{#if upcoming}}
                {{#each upcoming}}
                <div class="col mb-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                    <!-- <div class="container-fluid" class="p-2 bd-highlight">
                    <div class="upcoming_dashboard" class="row">-->
                      <div class="flex_item_upcoming" class="date_trip">Check-in: {{this.checkin}}</div>
                      <div class="flex_item_upcoming" class="date_trip">Check-out: {{this.checkout}}</div>
                      <div class="flex_item_upcoming">{{this.guests}} Guests</div>
                      <div class="flex_item_upcoming">Booked by {{this.guestname}}</div>                      
                      <div class="flex_item_upcoming"><button type="button" class="btn btn-outline-primary" class="btn_admindash">Send Message</button></div>
                      <div class="flex_item_upcoming"><button type="button" class="btn btn-outline-primary" class="btn_admindash">Booking Detail</button></div>
                    </div>
                  </div>
                </div>
                {{/each}}
                {{else}}
                <div class="alert alert-danger" role="alert">
                    <h5 class="alert-heading">You don't have upcoming bookings yet!</h5>
                </div>
                {{/if}}
               </div> 
          </div>
      </div> 
       <div class="refer_container" class="table-responsive">
          <div class="d-flex flex-column bd-highlight mb-3">
                <div class="upcoming_title"><h2>Invite friends</h2></div>
                <p>Refer your friends to PerfectRoom and get PerfectRoom in $45 credit</p>
                <input class="referEmail" type="email" placeholder="Enter your friend's email">
                <div class="refer_link">or send <a href="#">this link</a></div>
          </div>
        </div> 
    </main>
  </div>
</div>

