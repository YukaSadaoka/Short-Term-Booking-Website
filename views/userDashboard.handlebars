<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column" style="margin: 40px 20px;">
          <li class="nav-item">
          </li>
          <li class="nav-item" >
            <a class="dashboard_nav_link" class="nav-link" href="/contents/search">
              <span data-feather="file">Booking</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="shopping-cart">Trip Plans</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="users">History</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="bar-chart-2">Account</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="bar-chart-2">Help</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="/user/logout">
              <span data-feather="users">Logout</span>
            </a>
        </li>
        </ul>
        </div>
    </nav>

      
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2 class="h2">Hello {{firstname}} {{lastname}}</h2>  
      </div>
      <div class="upcoming_container" class="table-responsive">
          <div class="d-flex flex-column bd-highlight mb-3">
                <div class="upcoming_title"><h2>Upcoming Trips</h2></div>
                {{#if bookings}}
                {{#each bookings}}
                  <div class="container-fluid" class="p-2 bd-highlight">
                    <div class="row">
                      <div class="card">
                        <div class="card-body container_usertrips"> 
                          <div><img class="user_book_pic" src="{{this.roompic}}" alt="picture"></div>
                          <div class="flex_item_upcoming"><a href="/bookroom/{{this.roomid}}"><button type="button" class="btn btn-outline-primary btn_dashboard" class="btn_admindash">See Trip Details</button></a></div>
                          <div class="flex_item_upcoming" class="date_trip">{{this.roomtitle}}</div>
                          <div class="flex_item_upcoming" class="date_trip">Date: {{this.checkin}} - {{this.checkout}}<div>{{title.title}}</div></div>
                        </div>
                      </div> 
                  </div>
                </div>                
                {{/each}}
                {{else}}
                <div class="alert alert-danger" role="alert">
                    <h5 class="alert-heading">It seems that you have not booked a room yet!</h5>
                    <a href="/contents/search"><button type="button" class=" admin_btn btn btn-outline-primary">Book Room</button></a>
                </div>
                {{/if}}
          </div>
      </div> 
       <div class="refer_container" class="table-responsive">
          <div class="d-flex flex-column bd-highlight mb-3">
              <div class="invite"><h2>Invite friends</h2></div>
                <p>Refer your friends to PerfectRoom and get PerfectRoom in $45 credit</p>
                <form>
                <div class="form-group">
                  <input class="referEmail" type="email" placeholder="Enter your friend's email">
                </div>
                <div class="form-group">
                  <input type="submit" class="btn_invitation" class="btn btn-lg btn-primary btn-block" value="Send Invitation">
                </div>
              </form>
              <div class="refer_link">or send <a href="#">this link</a></div>      
          </div>
        </div> 
    </main>
  </div>
</div>

