<main class="login_text_centre">
    
    <form method="POST" action="/login" class="form_login" class="form-signin">
        <i lass="fas fa-door-open"></i>
        <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
        
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address" autofocus>
        
        <label for="inputPassword" class="sr-only">Password</label>
        <input  type="password" name="password" id="inputPassword" class="form-control" placeholder="Password">
        
        {{#each message}}
            <div class="login_error">{{this}}</div>
        {{/each}}


        <div class="login_check" class="checkbox mb-3">
            <label>
            <input type="checkbox" value="remember-me">Remember me
            </label>
        </div>

        <input type="submit" class="login_btn" class="btn btn-lg btn-primary btn-block" value="Log In">
        <p>You don't have an account?<a href="/registration" class="link_signup_login">Sign up</a></p>  
    </form>
</main>