<main class="login_text_centre">
    
    <form method="POST" action="/user/login" class="form_login" class="form-signin">
        <i lass="fas fa-door-open"></i>
        <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
        
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" name="email" class="form-control {{#if err.email}}is-invalid{{/if}}" value="{{email}}" id="inputEmail" class="form-control" placeholder="Email address" autofocus>
             <div class="form-group">        
                {{#each err.email}}
                    <div class="invalid-feedback" style="margin-top: 0.5em; display:block;">{{this}}</div>
                {{/each}}
            </div>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" class="form-control {{#if err.password}}is-invalid{{/if}}" value="{{password}}" id="inputPassword" class="form-control" placeholder="Password">
            <div class="form-group"> 
                {{#each err.password}}
                    <div class="invalid-feedback" style="margin-top: 0.5em; display:block;">{{this}}</div>
                {{/each}}
            </div>
        <div class="login_check" class="checkbox mb-3">
            <label>
            <input type="checkbox" value="remember-me">&nbspRemember me
            </label>
        </div>

        <input type="submit" class="login_btn" class="btn btn-lg btn-primary btn-block" value="Log In">
        <p>You don't have an account?<a href="/signup/registration" class="link_signup_login">Sign up</a></p>  
    </form>
</main>