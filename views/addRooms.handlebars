<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column" style="margin: 40px 20px;">
          <li class="nav-item">
          </li>
          <li class="nav-item" >
            <a class="dashboard_nav_link" class="nav-link" href="/user/profile">
              <span data-feather="file">Booking</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="shopping-cart">Manage Rooms</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="bar-chart-2">Help</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="#">
              <span data-feather="bar-chart-2">Account</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="dashboard_nav_link" class="nav-link" href="/user/logout">
              <span data-feather="users">Logout</span>
            </a>
          </li>
        </ul>
        </div>
    </nav>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Room Details</h4>
        <form method="POST" action="/admin/addrooms" enctype="multipart/form-data" class="needs-validation">
            <div class="row">
            <div class="col-md-6 mb-3">
                <label for="title">Title</label>
                <input type="text" name="title" value="{{title}}" class="form-control {{#if error.title}}is-invalid{{/if}}" class="form-control" id="title" placeholder="Title" >
                {{#each error.title}}
                    <div class="invalid-feedback" style="margin-top: 0.5em; display:block;">{{this}}</div>
                {{/each}}
            </div>
            <div class="col-md-6 mb-3">
                <label for="price">Price</label>
                <input type="text" name="price" value="{{price}}" class="form-control {{#if error.price}}is-invalid{{/if}}" class="form-control" id="price" placeholder="Price">
                {{#each error.price}}
                            <div class="invalid-feedback" style="margin-top: 0.5em; display:block;">{{this}}</div>
                {{/each}}
            </div>
            </div>

            <div class="mb-3">
                <label for="description">Description</label>
                <div class="input-group">
                    <textarea class="form-control" value="" class="form-control {{#if error.description}}is-invalid{{/if}}" name="description" id="description" placeholder="Description">{{description}}</textarea>
                    {{#each error.description}}
                            <div class="invalid-feedback" style="margin-top: 0.5em; display:block;">{{this}}</div>
                    {{/each}}
                </div>
            </div>

            <div class="mb-3">
                <label for="location">Location</label>
                <input type="text" name="location" value="{{location}}" class="form-control {{#if error.location}}is-invalid{{/if}}" class="form-control" id="location" placeholder="Location">
                {{#each error.location}}
                  <div class="invalid-feedback" style="margin-top: 0.5em; display:block;">{{this}}</div>
                {{/each}}
            </div>

            <div class="mb-4">
                <label for="photos">Photos</label>
                <input type="file" name="photo" class="form-control {{#if error.file}}is-invalid{{/if}}"  id="address">
                {{#each error.file}}
                  <div class="invalid-feedback" value="{{photo}}" style="margin-top: 0.5em; display:block;">{{this}}</div>
                {{/each}}
            </div>
            <input type="submit" value="Add a Room" class="btn_signup">
           </div>
        </form>
      </div>
    </main>
  </div>
</div>  